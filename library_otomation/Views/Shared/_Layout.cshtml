<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - library_otomation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/library_otomation.styles.css" asp-append-version="true" />
</head>
<body>
<header>

    <div class="navbar">
        <div class="logo">
            <h1>Book<span class="lib">Library</span></h1>
        </div>
        <div class="navbar-vertical" id="navt">
            <nav class="nav">
                <ul class="ullist">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Catageory</a></li>
                    <li><a href="#">Latest</a></li>
                    <li><a href="#">About Us</a></li>
                </ul>

            </nav>
            <button class="btn">Add Book</button>
        </div>
    </div>
    
    <div class="menu-img" onclick="toggle()" id="mi"><img src="images/menu.png"></div>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footerdiv">
            <div class="footer-col">
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
